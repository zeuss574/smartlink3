<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>link listing</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Mulish:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/style.css">
</head>
<body class="home-page">
    <div class="container">
        <h1>all links</h1>

        <% if (allLinks && allLinks.length > 0) { %>
            <table>
                <thead>
                    <tr>
                        <th>Artwork</th>
                        <th>Title</th>
                        <th>Creation Date</th>
                    </tr>
                </thead>
                <tbody>
                    <% allLinks.forEach(link => { %>
                        <tr>
                            <td><img src="<%= link.thumbnailUrl %>" alt="Artwork" class="artwork-img"></td>
                            <td><a href="/<%= link.customPath %>" target="_blank"><%= link.displayTitle %></a></td>
                            <td><%= link.creationDate %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <p>no smartlinks created yet.</p>
        <% } %>
        <a href="/" class="home-button">create a link</a>
    </div>
</body>
</html>
