<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>link listing</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Mulish:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/style.css">
</head>
<body class="home-page">
    <div class="container">
        <h1>all links</h1>

        <% if (allLinks && allLinks.length > 0) { %>
            <table>
                <thead>
                    <tr>
                        <th>Artwork</th>
                        <th>
                            <a href="/list?sortBy=displayTitle&order=<%= (sortBy === 'displayTitle' && order === 'asc') ? 'desc' : 'asc' %>">
                                Title
                                <% if (sortBy === 'displayTitle') { %>
                                    <%- order === 'asc' ? '&#9650;' : '&#9660;' %>
                                <% } %>
                            </a>
                        </th>
                        <th>
                            <a href="/list?sortBy=creationDate&order=<%= (sortBy === 'creationDate' && order === 'asc') ? 'desc' : 'asc' %>">
                                Creation Date
                                <% if (sortBy === 'creationDate') { %>
                                    <%- order === 'asc' ? '&#9650;' : '&#9660;' %>
                                <% } %>
                            </a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <% allLinks.forEach(link => { %>
                        <tr>
                            <td><img src="<%= link.thumbnailUrl %>" alt="Artwork" class="artwork-img"></td>
                            <td><a href="/<%= link.customPath %>" target="_blank"><%= link.displayTitle %></a></td>
                            <td>
                                <%
                                    let displayDate = 'N/A'; // Default value
                                    if (link.creationDate) {
                                        let datePart = link.creationDate.split(' - ')[0];
                                        if (datePart.includes('-')) { // New YYYY-MM-DD format
                                            const parts = datePart.split('-');
                                            displayDate = `${parts[2]}/${parts[1]}/${parts[0]}`;
                                        } else if (datePart.includes('/')) { // Old M/D/YYYY format
                                            const parts = datePart.split('/');
                                            if (parts.length === 3) {
                                                displayDate = `${parts[1].padStart(2, '0')}/${parts[0].padStart(2, '0')}/${parts[2]}`;
                                            } else {
                                                displayDate = datePart; // Fallback
                                            }
                                        } else {
                                            displayDate = datePart; // Fallback
                                        }
                                    }
                                %>
                                <%= displayDate %>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <p>no smartlinks created yet.</p>
        <% } %>
        <a href="/" class="home-button">create a link</a>
    </div>
</body>
</html>
